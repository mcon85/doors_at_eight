<div class="venue-details">
  <h2>Venue Details</h2>
  <h1><%= @venue.name %></h1>
  <%= link_to @venue.website, @venue.website, class: "website", target: "_blank" %>
  <p class="venue-address"><%= @venue.address %></p>
  <p class="venue-capacity">Capacity: <%= @venue.capacity %></p>
  <p class="venue-t-accessible"><%= @venue.display_t_accessible %></p>


  <h2>Reviews</h2>
  <%= render 'venues/reviews' %>
  <%= link_to 'Add A Review', new_venue_review_path(@venue), class: "button" %>
</div>
